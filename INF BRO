--[[ 
AutoWeave Toggle Script
Mimics CG_AutoWeave behavior without moving the character
Press T to toggle ON/OFF
]]

local UserInputService = game:GetService("UserInputService")

-- SETTINGS
local TOGGLE_KEY = Enum.KeyCode.T

-- STATE
local AutoWeaveEnabled = false

-- TOGGLE FUNCTION
local function toggleAutoWeave()
    AutoWeaveEnabled = not AutoWeaveEnabled
    print("[AutoWeave] " .. (AutoWeaveEnabled and "ENABLED" or "DISABLED"))
end

-- INPUT LISTENER
UserInputService.InputBegan:Connect(function(input, gameProcessed)
    if not gameProcessed and input.KeyCode == TOGGLE_KEY then
        toggleAutoWeave()
    end
end)

-- OPTIONAL: expose AutoWeave state to other scripts
-- For example, another script can check AutoWeaveEnabled
_G.CG_AutoWeave = AutoWeaveEnabled

-- HEARTBEAT LOOP to keep _G.CG_AutoWeave updated
game:GetService("RunService").Heartbeat:Connect(function()
    _G.CG_AutoWeave = AutoWeaveEnabled
end)
